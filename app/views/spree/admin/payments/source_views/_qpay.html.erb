<style type="text/css" media="screen">
  #wirecard_response pre {
    white-space: pre-wrap;
  }
</style>

<fieldset>
  <legend>Wirecard</legend>

  <table class="index" id="wirecard_response">
    <thead>
      <tr>
        <th colspan="2">Wircard Transaction</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">Response Code:</th>
        <td><pre><%=raw payment.response_code %></pre></td>
      </tr>
      <tr>
        <th scope="row">Currency:</th>
        <td><%= payment.source.currency %></td>
      </tr>
      <tr>
        <th scope="row">Order number:</th>
        <td><%= payment.source.order_number %></td>
      </tr>
      <tr>
        <th scope="row">Payment type:</th>
        <td><%= payment.source.payment_type %></td>
      </tr>
      <tr>
        <th scope="row">Params:</th>
        <td><pre><%= payment.source.params.to_yaml.gsub(",", ", ") %></pre></td>
      </tr>
    </tbody>
  </table>
</fieldset>